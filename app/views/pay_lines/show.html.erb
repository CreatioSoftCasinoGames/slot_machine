<%- model_class = PayLine -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:label) %>:</strong></dt>
  <dd><%= @pay_line.label %></dd>
  <dt><strong><%= model_class.human_attribute_name(:x) %>:</strong></dt>
  <dd><%= @pay_line.x %></dd>
  <dt><strong><%= model_class.human_attribute_name(:y) %>:</strong></dt>
  <dd><%= @pay_line.y %></dd>
  <dt><strong><%= model_class.human_attribute_name(:slot_id) %>:</strong></dt>
  <dd><%= @pay_line.slot_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pay_lines_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pay_line_path(@pay_line), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pay_line_path(@pay_line),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
