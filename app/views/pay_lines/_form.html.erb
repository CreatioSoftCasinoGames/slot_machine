<%= form_for @pay_line, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :label, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :label, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :x, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :x, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :y, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :y, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :slot_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :slot_id, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            pay_lines_path, :class => 'btn btn-default' %>
 
<% end %>
