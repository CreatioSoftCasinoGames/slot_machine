<%= form_for @pay_line, :html => { :class => 'form-horizontal' } do |f| %>

  
  <div class="form-group">
    <%= f.label :slot_id, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :slot_id, options_for_select( Slot.all.collect { |s| [ s.name, s.id ] }, @pay_line.slot_id), {}, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :label, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :label, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :x, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :x, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :y, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :y, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pay_lines_path, :class => 'btn btn-default' %>
    </div>
  </div>
 
<% end %>
