<%= form_for @asset, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.hidden_field :resource_id, value: (params[:resource_id] || @asset.resource_id) %>
  <%= f.hidden_field :resource_type, value: (params[:resource_type] || @asset.resource_type) %>

  <div class="form-group">
    <%= f.label :version, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :version, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :file, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.file_field :file %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :country, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :country, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :bundle_type, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.select :bundle_type, options_for_select(ASSET_BUNDLE_TYPE, (params[:bundle_type] || @asset.bundle_type)), {}, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :label, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :label, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :active, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.check_box :active %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">  
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            edit_polymorphic_path(@resource), :class => 'btn btn-default' %>    
    </div>
  </div>
 
<% end %>
