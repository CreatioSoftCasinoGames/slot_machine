<%= form_for @asset, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.hidden_field :game_id, value: (params[:game_id] || @asset.game_id) %>

  <div class="form-group">
    <%= f.label :version, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :version, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :file, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.file_field :file %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :country, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :country, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :bundle_type, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.select :bundle_type, options_for_select(["MINIGAME", "GAMEUI", "SLOTMACHINE", "ALL"], @asset.bundle_type), {}, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :label, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :label, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">  
      <label class="checkbox-inline"><%= f.check_box :active %> Active</lable>
      <div>
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              assets_path, :class => 'btn btn-default' %>    
      </div>
    </div>
  </div>
 
<% end %>
