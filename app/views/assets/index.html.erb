<%- model_class = Asset -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:version) %></th>
      <th><%= model_class.human_attribute_name(:resource_id) %></th>
      <th><%= model_class.human_attribute_name(:resource_type) %></th>
      <th><%= model_class.human_attribute_name(:file_file_name) %></th>
      <th><%= model_class.human_attribute_name(:file_content_type) %></th>
      <th><%= model_class.human_attribute_name(:file_file_size) %></th>
      <th><%= model_class.human_attribute_name(:file_updated_at) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <td><%= link_to asset.id, asset_path(asset) %></td>
        <td><%= asset.version %></td>
        <td><%= asset.resource_id %></td>
        <td><%= asset.resource_type %></td>
        <td><%= asset.file_file_name %></td>
        <td><%= asset.file_content_type %></td>
        <td><%= asset.file_file_size %></td>
        <td><%= asset.file_updated_at %></td>
        <td><%= asset.country %></td>
        <td><%=l asset.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_asset_path(asset), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      asset_path(asset),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_asset_path,
            :class => 'btn btn-primary' %>
