<%= form_for @game, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">  
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                games_path, :class => 'btn btn-default' %>
    </div>
  </div>
 
<% end %>

<% unless @game.new_record? %>

<div class="col-md-6">
  <legend>Themes</legend>
  <ul>
    <% @game.themes.each do |theme| %>
      <li>
        <%= theme.name %>
        <%= link_to 'Edit', edit_theme_path(theme.id) %>
        <%= link_to "X", theme_path(theme), method: :delete, :data => { :confirm => 'Are you sure?' }, class: "delete" %>
      </li>
    <% end %>
    <li><%= link_to "New Theme", new_theme_path(game_id: @game.id) %></li>
  </ul>
</div>

<% end %>