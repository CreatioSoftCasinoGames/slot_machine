<%= form_for @stamp, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="form-group">
    <%= f.label :math_model_id, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :math_model_id, options_for_select( MathModel.all.collect { |mm| [ mm.name, mm.id ] }, @stamp.math_model_id), {}, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, :class => 'col-sm-2 col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'col-sm-2 col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            stamps_path, :class => 'btn btn-default' %>
    </div>
  </div>

  
  
 
<% end %>
