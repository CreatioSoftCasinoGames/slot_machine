<%= form_for @reel, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="form-group">
    <%= f.label :math_model_id, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :math_model_id, options_for_select( MathModel.all.collect { |mm| [ mm.name, mm.id ] }, @reel.math_model_id), {}, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :stamp_id, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :stamp_id, options_for_select( Stamp.all.collect { |s| [ s.name, s.id ] }, @reel.stamp_id), {}, :class => 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :label, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :label, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :size, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :size, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                edit_math_model_path(@math_model), :class => 'btn btn-default' %>
    </div>
  </div>
 
<% end %>
