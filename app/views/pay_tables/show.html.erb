<%- model_class = PayTable -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:count) %>:</strong></dt>
  <dd><%= @pay_table.count %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stamp_id) %>:</strong></dt>
  <dd><%= @pay_table.stamp_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:slot_id) %>:</strong></dt>
  <dd><%= @pay_table.slot_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:points) %>:</strong></dt>
  <dd><%= @pay_table.points %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pay_tables_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pay_table_path(@pay_table), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pay_table_path(@pay_table),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
