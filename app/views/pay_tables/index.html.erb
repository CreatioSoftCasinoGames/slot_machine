<%- model_class = PayTable -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:count) %></th>
      <th><%= model_class.human_attribute_name(:stamp_id) %></th>
      <th><%= model_class.human_attribute_name(:math_model_id) %></th>
      <th><%= model_class.human_attribute_name(:points) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @pay_tables.each do |pay_table| %>
      <tr>
        <td><%= link_to pay_table.id, pay_table_path(pay_table) %></td>
        <td><%= pay_table.count %></td>
        <td><%= pay_table.stamp_id %></td>
        <td><%= pay_table.math_model_id %></td>
        <td><%= pay_table.points %></td>
        <td><%=l pay_table.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_pay_table_path(pay_table), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      pay_table_path(pay_table),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pay_table_path,
            :class => 'btn btn-primary' %>
